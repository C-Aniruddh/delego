<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="clstr.delego">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".QRScanActivity"
            android:excludeFromRecents="true"
            android:taskAffinity="" />
        <activity
            android:name=".UserDetails"
            android:label="@string/title_activity_user_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserCheckin"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:theme="@style/Theme.Sliding.Light" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllUsers"
            android:label="@string/title_activity_all_users"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DelegatesList"
            android:label="@string/title_activity_delegates_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>